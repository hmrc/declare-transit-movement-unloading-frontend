{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/date-input/macro.njk"    import govukDateInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "macros/headingCaption.njk"                import headingCaption %}

{% block pageTitle %}
  {{ title(messages("dateGoodsUnloaded.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.DateGoodsUnloadedController.onSubmit(mrn, mode).url }}" method="post">

        {{ csrf() | safe }}

        {{ headingCaption(mrn) }}

         {{ headingCaption(mrn) }}

         {{ govukDateInput({
            fieldset: {
              legend: {
                text: messages('dateGoodsUnloaded.title'),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            hint: {
              text: messages('dateGoodsUnloaded.hint')
            },
            errorMessage: date.error,
            items: date.items
          }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id:"submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
